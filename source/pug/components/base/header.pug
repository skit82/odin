mixin header(headerMods, currentUrl)

  header.header(class=headerMods, data-mob-menu="burger-mod", data-fix-block, data-burger="header")
      .header__wrapper
        .header__container
          if(currentUrl === "index.html")
            //- lighthouse снимает 10 баллов SEO за <a> без href
            .header__top
              span.header__logo(data-mob-menu="burger-mod")
                img(src="./img/svg/logo.svg", widht="403", height="45", alt="Логотип компании")
          else
            .header__top
              a.header__logo(href="index.html", aria-label="Переход на главную", data-mob-menu="burger-mod")
                img(src="./img/svg/logo.svg", widht="403", height="45", alt="Логотип компании")
          nav.header__nav
            ul.header__main-menu(data-dropdown="block-left-parent")
              li.header__main-menu-item
                a.header__main-menu-link(href="#", aria-label="Главная", data-dropdown="trigger") Порошковая краска
              li.header__main-menu-item
                a.header__main-menu-link(href="about-us.html", aria-label="О нас", data-dropdown="trigger") Производство
              li.header__main-menu-item
                a.header__main-menu-link(href="works.html", aria-label="Наши работы", data-dropdown="trigger") Лаборатория
              li.header__main-menu-item
                a.header__main-menu-link(href="works.html", aria-label="Наши работы", data-dropdown="trigger") Контакты
          button.header__menu-toggle(type="button", aria-label="Переключатель отображения меню", aria-pressed="false", data-mob-menu="menu-toggle")
            span
            span
            span
      .container
        .info
          .info__wrapper
            .info__title
              p Производим и поставляем span Порошковую краску
            ul.info__list
              li.info__item
                p собственное производство
              li.info__item
                p уникальная рецептура
              li.info__item
                p строгий контроль качества

